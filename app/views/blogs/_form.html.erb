<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.select :author, [[ current_user.username, current_user.username], ["Guest Author", "Guest"],["Moderator", "Keith"]]  %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => "35", :rows => "15"  %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
   	 <%= f.label "Post Type" %><br />
     <%= f.select :image_url, [["Art","blog_img/art.gif"],["Development", "blog_img/code.png"],["Design", "blog_img/design.png"],["Site News", "blog_img/site.gif"]] %>

  </div>
  <br />
  <div class="actions">
  	
    <%= f.submit 'Submit Post' %>
  </div>
<% end %>
