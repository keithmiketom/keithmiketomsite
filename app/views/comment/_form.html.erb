<%= form_for([@blog, @comment]) do |f| %>
  <div class="field clearfix">
    <%= f.label :content, 'comment here' %><br />
    <%= f.text_area :content, :cols => "50", :rows => "5"  %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>